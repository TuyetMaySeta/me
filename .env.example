# EMS Application Configuration Example
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ems_db

# Application Settings
APP_NAME=EMS FastAPI Server
APP_VERSION=1.0.0
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
HOST=0.0.0.0
PORT=8000
API_PREFIX=/ems/api/v1

# Logging Configuration
LOG_LEVEL=DEBUG

# IAM Service Configuration
IAM_SERVICE_URL=http://localhost:8001
IAM_USERNAME=ems_service
IAM_PASSWORD=ems_service_password
IAM_TIMEOUT=30
